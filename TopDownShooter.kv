#:kivy 1.10.1

<Tir>:
    size: 5, 15
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Player>:

    size : 30, 10
    canvas:
        Ellipse:
            segments: 3
            pos: self.pos
            size: self.size

<TD>:
    canvas:
        Rectangle:
            size: 30,30
            pos: self.pos


<TopDownShooterGame>:

    tir: tir
    player: player
    td: td

    Label:
        font_size: 20
        right: root.right - 5
        top: root.top - 3
        text: "Score : "+str(player.score)

    Player:
        id: player

        center_x: self.parent.center_x

    TD:
        id: td
        center_x: self.parent.center_x
        top: root.top

    Tir:
        id: tir
        center_x: -self.parent.width*2