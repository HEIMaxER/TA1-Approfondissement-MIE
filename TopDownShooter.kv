#:kivy 1.10.1

<Tir>:
    size: 15, 45
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Joueur>:

    size : 80, 40
    canvas:
        Ellipse:
            segments: 3
            pos: self.pos
            size: self.size

<EnemieA>
    canvas:
        Rectangle:
            size: 100,60
            pos: self.pos
            source: 'TA.PNG'

<EnemieB>
    canvas:
        Rectangle:
            size: 100,60
            pos: self.pos


<TopDownShooterGame>:

    tir: tir
    joueur: joueur
    enemiea: enemiea
    enemieb: enemieb

    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Serenade.PNG'

    Label:
        font_size: 20
        halign: 'left'
        top: root.top - 3
        text: "Time : "+str(int(joueur.temps))

    Label:
        font_size: 20
        right: root.right - 5
        top: root.top - 3
        text: "Score : "+str(joueur.score)

    Joueur:
        id: joueur
        center_x: self.parent.center_x

    EnemieA:
        id: enemiea
        center_x: self.parent.center_x
        top: root.top

    EnemieB:
        id: enemieb
        center_x: self.parent.center_x
        top: root.top

    Tir:
        id: tir
        center_x: -self.parent.width*2