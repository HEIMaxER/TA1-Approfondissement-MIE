#:kivy 1.10.1

<Tir1>:
    size: 45, 45
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Bush.jpg'



<Conglaturation>:
    canvas:
        Rectangle:
            size: 400, 210
            pos: -1000, -1000
            source: 'Conglaturation.PNG'

<Tir2>:
    size: 45, 45
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Bush.jpg'


<Joueur>:

    size : 80, 80
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Joueur.PNG'

<EnemieA>
    canvas:
        Rectangle:
            size: 100,60
            pos: self.pos
            source: 'TP.PNG'

<EnemieB>
    canvas:
        Rectangle:
            size: 100,60
            pos: self.pos
            source: 'Langue.PNG'


<TopDownShooterGame>:

    tir1: tir1
    tir2: tir2
    joueur: joueur
    enemiea: enemiea
    enemieb: enemieb
    conglaturation: conglaturation

    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Serenade.PNG'

    Label:
        font_size: 20
        halign: 'left'
        top: root.top
        text: "Time : "+str(int(joueur.temps))

    Label:
        font_size: 20
        right: root.right - 5
        top: root.top
        text: "Score : "+str(joueur.score)

    Joueur:
        id: joueur
        center_x: self.parent.center_x

    EnemieA:
        id: enemiea
        center_x: self.parent.center_x
        top: root.top

    EnemieB:
        id: enemieb
        center_x: self.parent.center_x
        top: root.top

    Tir1:
        id: tir1
        center_x: -self.parent.width*2

    Tir2:
        id: tir2
        center_x: -self.parent.width*2

    Conglaturation:
        id: conglaturation
        center_x: self.parent.center_x
        center_y: self.parent.center_y
