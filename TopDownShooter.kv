#:kivy 1.10.1

<Tir>:
    size: 5, 15
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Joueur>:

    size : 30, 10
    canvas:
        Ellipse:
            segments: 3
            pos: self.pos
            size: self.size

<EnemieA>:
    canvas:
        Rectangle:
            size: 30,30
            pos: self.pos


<TopDownShooterGame>:

    tir: tir
    joueur: joueur
    enemiea: enemiea

    Label:
        font_size: 20
        right: root.right - 5
        top: root.top - 3
        text: "Score : "+str(joueur.score)

    Joueur:
        id: joueur
        center_x: self.parent.center_x

    EnemieA:
        id: enemiea
        center_x: self.parent.center_x
        top: root.top

    Tir:
        id: tir
        center_x: -self.parent.width*2